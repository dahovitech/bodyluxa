        <div class="row align-items-center">
            <div class="col-lg-8">
                <h3 class="mb-3">{{ 'interested_in_service'|trans }}</h3>
                <p class="lead mb-0">{{ 'contact_us_for_personalized_quote'|trans }}</p>
            </div>
            <div class="col-lg-4 text-lg-end">
                <a href="{{ path('contact') }}" class="btn btn-light btn-lg me-3">
                    <i class="fas fa-envelope me-2"></i>
                    {{ 'contact_us'|trans }}
                </a>
                <a href="https://wa.me/{{ config.getWhatsappNumber() }}" target="_blank" class="btn btn-success btn-lg">
