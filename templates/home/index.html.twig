                        <p class="text-muted mb-4">{{ 'dental_care_desc'|trans }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-bold">{{ 'starting_from'|trans }} €1,500</span>
                            <a href="#" class="btn btn-outline-primary btn-sm">{{ 'learn_more'|trans }}</a>
                        </div>
                    </div>
                </div>
            {% endif %}
        </div>

        <div class="text-center mt-5" data-aos="fade-up">
            <a href="{{ path('services') }}" class="btn btn-gradient btn-lg">
                {{ 'view_all_services'|trans }}
