                            <span class="text-primary fw-bold">{{ 'starting_from'|trans }} €2,500</span>
                            <a href="#" class="btn btn-outline-primary btn-sm">
                                {{ 'learn_more'|trans }}
                            </a>
                        </div>
                    </div>
                </div>
            {% endfor %}
            
