                        <p class="text-muted mb-4">{{ 'hair_transplant_desc'|trans }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-bold">{{ 'starting_from'|trans }} €2,500</span>
                            <a href="#" class="btn btn-outline-primary btn-sm">{{ 'learn_more'|trans }}</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="100">
                    <div class="service-card h-100">
                        <div class="service-icon mx-auto">
                            <i class="fas fa-user-md"></i>
                        </div>
                        <h4 class="fw-bold mb-3">{{ 'plastic_surgery'|trans }}</h4>
                        <p class="text-muted mb-4">{{ 'plastic_surgery_desc'|trans }}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="text-primary fw-bold">{{ 'starting_from'|trans }} €3,000</span>
                            <a href="#" class="btn btn-outline-primary btn-sm">{{ 'learn_more'|trans }}</a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-4 col-md-6" data-aos="fade-up" data-aos-delay="200">
                    <div class="service-card h-100">
                        <div class="service-icon mx-auto">
                            <i class="fas fa-tooth"></i>
